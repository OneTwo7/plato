<p id="notice"><%= notice %></p>

<h1>Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.name %></td>
        <td><%= lesson.content %></td>
        <td><%= lesson.path.name %></td>
        <td><%= link_to 'Show', path_lesson_path(@path, lesson) %></td>
        <td><%= link_to 'Edit', edit_path_lesson_path(@path, lesson) %></td>
        <td><%= link_to 'Destroy', path_lesson_path(@path, lesson),
                method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_path_lesson_path(@path) %>
