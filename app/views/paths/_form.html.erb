<%= form_for(path) do |f| %>
  <% if path.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(path.errors.count, "error") %> prohibited this path from being saved:</h2>

      <ul>
      <% path.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Path Title" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
  <%= link_to 'Back', @path, class: 'btn btn-secondary' %>
<% end %>
